        </label>
      <%end%>
      <%if @user.user_i_js==0&&@user.user_d_authority_5==1%>
        <label class="radio-inline c-radio">
          <input type="radio" id="r7" value="11" name="r1">
          <span class="fa fa-circle"></span>
          检测机构检测数据批准人员
        </label>
      <%end%>
     <% if @user.user_i_js==0&&@user.jbxx_sh==1 %>
          <label class="radio-inline c-radio">
          <input type="radio" id="r16" value="16" name="r1"/>
          <span class="fa fa-circle"></span>
          报告发送人
       </label>
     <% end %>
      <%if @user.user_i_switch==1%>
        <label class="radio-inline c-radio">
          <input type="radio" id="r8" value="8" name="r1">
          <span class="fa fa-circle"></span>
          检测机构牵头单位
        </label>
      <%end%>
      <%if @user.user_i_spys==1%>
        <label class="radio-inline c-radio">
          <input type="radio" id="r9" value="9" name="r1">
          <span class="fa fa-circle"></span>
          食品一司
        </label>
      <%end%>
      <%if @user.user_i_spss==1%>
        <label class="radio-inline c-radio">
          <input type="radio" id="r10" value="10" name="r1">
          <span class="fa fa-circle"></span>
          食品三司
        </label>
      <%end%>
      <hr>
      <%= submit_tag("确定", :class => 'btn btn-primary btn-sm') %>
    <%end%>
  </div>
</div>
