    <td width="80px"><%= bjp_bsb.bjp_s_13 %></td>
    <td>&nbsp;</td>
    <td width="100px"><%= bjp_bsb.bjp_s_31 %></td>
    <td>&nbsp;</td>
    <td width="100px"><%= bjp_bsb.bjp_s_39 %></td>
    <td>&nbsp;</td>
    <%if (bjp_bsb["bjp_i_state"]==nil) %>
        <td><%= link_to '修改', edit_bjp_bsb_path(bjp_bsb) %></td>
        <td><%= link_to '删除', bjp_bsb, method: :delete, data: { confirm: '是否删除?' } %></td>
    <%elsif (bjp_bsb["bjp_i_state"]<2) %>
        <td><%= link_to '修改', edit_bjp_bsb_path(bjp_bsb) %></td>
        <td><%= link_to '删除', bjp_bsb, method: :delete, data: { confirm: '是否删除?' } %></td>
    <%elsif bjp_bsb["bjp_i_state"]<4 %>
        <td><%= link_to '填报检测数据', edit_bjp_bsb_path(bjp_bsb) %></td>
        <td><%= link_to '删除', bjp_bsb, method: :delete, data: { confirm: '是否删除?' } %></td>
        <td><%= link_to '退修', :controller => "bjp_bsbs",:action => "submit", :id =>bjp_bsb %></td>
    <%elsif bjp_bsb["bjp_i_state"]==4%>
        <td><%= link_to '查看', bjp_bsb %></td>
        <td><%= link_to '退修', :controller => "bjp_bsbs",:action => "submit", :id =>bjp_bsb %></td>
    <%elsif bjp_bsb["bjp_i_state"]==10 %>
        <td><%= link_to '修改(导入待入库)', edit_bjp_bsb_path(bjp_bsb) %></td>
        <td><%= link_to '删除', bjp_bsb,method: :delete, data: { confirm: '是否删除?' } %></td>
    <%end%>
  </tr>
<% end %>
