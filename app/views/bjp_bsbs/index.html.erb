    <td><%= bjp_bsb.bjp_d_95 %></td>
    <td>&nbsp;</td>
    <td><%= bjp_bsb.bjp_d_34 %></td>
    <td>&nbsp;</td>
    <td><%= bjp_bsb.bjp_s_3 %></td>
    <td>&nbsp;</td>
    <td width="80px"><%= bjp_bsb.bjp_s_14 %></td>
