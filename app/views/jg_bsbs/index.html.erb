<style type="text/css">
    
	.style1 {
		border-collapse: collapse;
		font-size: 9pt;
		font-family: Calibri, sans-serif;
		border-style: none;
		border-color: inherit;
		border-width: medium;
		table-layout:fixed;
	}
	.style1 td{
		border: solid windowtext 1.0px;
		padding: 0cm 5.4pt 0cm 5.4pt;
		height: 30px;		
	}
	.style1 th{
		border: solid windowtext 1.0px;
		padding: 0cm 5.4pt 0cm 5.4pt;
		height: 30px;
	}
	.inputText {
		font-size: 12px;
		border-right-width: 0px;
		border-left-width: 0px;
		border-top-width: 0px;
		border-bottom: 1px solid;
		background-color : transparent; 
		
	}
</style>
<h1 align="center">机构列表</h1>
  <form action="/jg_bsbs" method="GET">
    <table class="table table-bordered">
      <tr>
        <th>机构名称</th>
        <td><input class="inputText" name="name" type="text" value="<%= params[:name]%>"></td>
        <th>联系人</th>
        <td><input class="inputText" name="contact" type="text" value="<%= params[:contact]%>"></td>
        <th>省份</th>
        <td><input class="inputText" name="province" type="text" value="<%= params[:province]%>"></td>
        <td>
          <input type="submit" value="搜索" class="btn btn-sm btn-primary">
        </td>
      </tr>
    </table>
  </form>
  <br>
  <table class="table table-bordered">
    <tr>
      <th colspan="7" class="col-md-2 col-xs-2">机构名称</th>
      <th colspan="7" class="col-md-2 col-xs-2">机构地址</th>
      <th colspan="7" class="col-md-2 col-xs-2">上级行政主管部门名称</th>
      <th colspan="4">机构联系人</th>
      <th colspan="4">联系电话</th>
      <th colspan="4">所属省份</th>
      <th colspan="2"></th>
      <th colspan="2"></th>
    </tr>

  <% @jg_bsbs.each do |jg_bsb| %>
    <tr>
      <td colspan="7"><%= jg_bsb.jg_name %></td>
      <td colspan="7"><%= jg_bsb.jg_address %></td> 
      <td colspan="7"><%= jg_bsb.jg_higher_level %></td>
      <td colspan="4"><%= jg_bsb.jg_contacts %></td>
      <td colspan="4"><%= jg_bsb.jg_tel %></td>
      <td colspan="4"><%= jg_bsb.jg_province %></td>
      <td colspan="2"><%= link_to '编辑', edit_jg_bsb_path(jg_bsb) %></td>
      <td colspan="2"><%= link_to '删除', jg_bsb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>
  <h2><%= link_to '新建机构', new_jg_bsb_path, :class => "btn btn-sm btn-primary" %></h2>
  <p><%=will_paginate @sp_bsbs ,:separator=>',',:previous_label=>'上一页',:next_label=>'下一页'%></p>
  <%if session[:user_name]=='admin'%>
    <fieldset style="padding: 5px 10px;">
      <legend>机构用户导入</legend>
      <b> <%= flash[:import_result] unless flash[:import_result].nil?%> </b>
      <%= form_tag({action: :import_data_excel}, multipart: true) do %>
        <%= file_field_tag 'excel' %>
        <br>
        <%= submit_tag("机构用户导入") %>
      <% end %>
    </fieldset>
  <%end%>