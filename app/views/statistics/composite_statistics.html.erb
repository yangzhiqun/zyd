<script type="text/javascript">
    var config = {
        id: "tg1",
        width: "100%",
        renderTo: "div1",
        headerAlign: "left",
        headerHeight: "30",
        dataAlign: "left",
        indentation: "20",
        folderOpenIcon: "<%= asset_path('statistics/page-open.png') %>",
        folderCloseIcon: "<%= asset_path('statistics/page-close.png') %>",
        defaultLeafIcon: "<%= asset_path('statistics/page-none.png') %>", 
        hoverRowBackground: "false",
        folderColumnIndex: "0",
        itemClick: "itemClickEvent",
        columns:[
            {headerText: "地区", dataField: "name", headerAlign: "center",width: "200", handler: "customOrgName"},
            {headerText: "总批次",dataField: "totalbat", headerAlign: "center", dataAlign: "center", width: "100"},
            {headerText: "监督抽检批次", dataField: "samplingbat",headerAlign: "center", dataAlign: "center", width: "120"},
            {headerText: "合格批次", dataField: "qualifiedbat",headerAlign: "center", dataAlign: "center", width: "120"},
            {headerText: "不合格批次",dataField: "unqualifiedbat", headerAlign: "center", dataAlign: "center", width: "120"},
            {headerText: "不合格样品率", dataField: "qualifiedsamp",headerAlign: "center", dataAlign: "center", width: "120"},
            {headerText: "风险检测批次", dataField: "riskbat",headerAlign: "center", dataAlign: "center", width: "120"},
            {headerText: "问题样品批次", dataField: "problembat",headerAlign: "center", dataAlign: "center", width: "120"},
            {headerText: "问题样品率", dataField: "problemsamp",headerAlign: "center", dataAlign: "center", width: "120"}
        ],
        data: <%= raw @data %> 
