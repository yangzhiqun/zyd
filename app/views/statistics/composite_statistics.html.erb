        //    {name: "合肥",totalbat:"6574",samplingbat:"1232",qualifiedbat:"1200",unqualifiedbat:"193",qualifiedsamp:"4.263%",riskbat:"1222",problembat:"713",problemsamp:"1.24%",children:[
        //                        {name: "长丰",totalbat:"2131",samplingbat:"231",qualifiedbat:"226",unqualifiedbat:"5",qualifiedsamp:"1.23%",riskbat:"650",problembat:"625",problemsamp:"3.75%",},
        //                        {name: "肥东",totalbat:"2344",samplingbat:"434",qualifiedbat:"400",unqualifiedbat:"34",qualifiedsamp:"5.17%",riskbat:"654",problembat:"23",problemsamp:"1.25%",},
        //                        {name: "巢湖",totalbat:"1009",samplingbat:"954",qualifiedbat:"800",unqualifiedbat:"154",qualifiedsamp:"11.5%",riskbat:"380",problembat:"65",problemsamp:"18.7%",},
        //                        ]},
        //    {name: "安庆",totalbat:"7500",samplingbat:"6500",qualifiedbat:"6350",unqualifiedbat:"150",qualifiedsamp:"6.2%",riskbat:"2200",problembat:"106",problemsamp:"4.818%",},
        //    {name: "黄山",totalbat:"10900",samplingbat:"8000",qualifiedbat:"7355",unqualifiedbat:"645",qualifiedsamp:"8.06%",riskbat:"3552",problembat:"72",problemsamp:"2.64%",},
        //    {name: "六安",totalbat:"7826",samplingbat:"6500",qualifiedbat:"6350",unqualifiedbat:"150",qualifiedsamp:"6.2%",riskbat:"2200",problembat:"106",problemsamp:"4.818%",},
        //    {name: "总计",totalbat:"32800",samplingbat:"22232",qualifiedbat:"21255",unqualifiedbat:"1138",qualifiedsamp:"6.18%",riskbat:"9174",problembat:"997",problemsamp:"3.379%",height:"200"},
        //]
    };

    $(document).ready(function(){
        treeGrid.expandAll("N");//默认关闭
        $("#div1 table tr:last td:first").children("img").remove(); //删除最后图标
        $(".allcheck").click(function(){
            $("#tg1").find("input[name='cblbox']").attr("checked",$(this).attr("checked"));
        });

    });
    /*
        单击数据行后触发该事件
        id：行的id
        index：行的索引。
        data：json格式的行数据对象。
    */
    function itemClickEvent(id, index, data){


        jQuery("#currentRow").val(id + ", " + index + ", " + TreeGrid.json2str(data));
    }

    /*
        通过指定的方法来自定义栏数据
    */
    function customCheckBox(row, col){
        return "<input name='cblbox' type='checkbox'>";
    }

    function customOrgName(row, col){
        var name = row[col.dataField] || "";
        return name;
    }

    function customLook(row, col){

        return "<a href='javascript:void(0)' onclick='showrowname(\""+row.code+"\",\""+row.name+"\")' style='color:blue;'>查看</a>";
    }

    function showrowname(code , name){
        alert( code +  name );

    }

    //创建一个组件对象
    var treeGrid = new TreeGrid(config);
    treeGrid.show();

    /*
        展开、关闭所有节点。
        isOpen=Y表示展开，isOpen=N表示关闭
    */
    function expandAll(isOpen){
        treeGrid.expandAll(isOpen);
    }

    /*
        取得当前选中的行，方法返回TreeGridItem对象
    */
    function selectedItem(){
        var treeGridItem = treeGrid.getSelectedItem();
        if(treeGridItem!=null){
            //获取数据行属性值
            //alert(treeGridItem.id + ", " + treeGridItem.index + ", " + treeGridItem.data.name);

            //获取父数据行
            var parent = treeGridItem.getParent();
            if(parent!=null){
                //jQuery("#currentRow").val(parent.data.name);
            }

            //获取子数据行集
            var children = treeGridItem.getChildren();
            if(children!=null && children.length>0){
                jQuery("#currentRow").val(children[0].data.name);
            }
        }
    }
</script>

<!-- 选择筛选器 -->
<script type="text/javascript">
    var $Check_selectbox = $(".check_selectbox"); //表单栏集合
    var $Checks_box = $("input[name='checkbox']");  //复选框集合
    var len = $Checks_box.length; //获取复选框总个数
    $Checks_box.each(function(index,element){
        $(this).click(function(){
            // 复选框联动
            if($(this).is(":checked")){
                $($Check_selectbox).eq(index).css("display","inline-block");
                if (index == len - 1) {
                    $($Check_selectbox).eq(index).nextAll(".check_selectbox").css("display","inline-block");
                }
            }else{
                $($Check_selectbox).eq(index).css("display","none");
                if (index == len - 1) {
                    $($Check_selectbox).eq(index).nextAll(".check_selectbox").css("display","none");
                }
            }
        })
    });
</script>
</html>
