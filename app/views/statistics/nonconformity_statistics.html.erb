                                    show: true
                                }
                            },
                            data: <%= raw @data_arr %>
                        }
                    ]
                 };
                 myChart.setOption(option);
                 curMap = {
                    mapCode: mapCode,
                    mapName: mapName
                 };     
             } else {
                 alert('无法加载该地图');
             }       
        });
    }   
