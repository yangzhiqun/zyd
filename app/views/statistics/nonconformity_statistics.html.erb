    // 点击左侧边栏显示相应的地区
    function click_slide(mapCode,mapTitle,name){
        if (!mapCode) {
            alert('无此区域地图显示,将显示上级');
            return;
        }
        loadMap(mapCode,mapTitle,name); 
        //将上一级地图信息压入mapStack
        mapStack.push({
            mapCode: curMap.mapCode,
            mapName: curMap.mapName
        });
