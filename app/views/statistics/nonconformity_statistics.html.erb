                        left:'center'
                    },
                    tooltip: {
                        trigger: 'item'
                        // formatter: '{b}'
                    },
                    visualMap: {
                       min: 0,
                       max: 100,
                       left: 'left',
                       top: 'bottom',
                       text: ['高','低'],          
                       calculable: true,
                       inRange: {
                           color: ['yellow', 'lightblue']
                       }
                    },
                    // toolbox: {
                   
                    series: [
                        {
                            name: '不合格批次',
                            type: 'map',
                            mapType: mapName,
                            selectedMode : 'multiple',
