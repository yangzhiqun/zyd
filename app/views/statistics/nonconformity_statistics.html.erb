<div style="text-align: center; margin: 10px;">
</div>
<div style="">
  <div id="circle" style="width: 600px;height:400px; text-align: center"></div>
  <script type="text/javascript">
    var myChart = echarts.init(document.getElementById('circle'));
    var option = {
      title: {
        text: '不合格项目统计',
        subtext: '查询统计省市县三级不合格项目情况。',
        x: 'center'
      },
      tooltip: {
        trigger: 'item',
        formatter: "{a} <br/>{b} : {c} ({d}%)"
      },
      legend: {
        orient: 'vertical',
        left: 'left',
        data: ['合格', '不合格', '未检出']
      },
      color: ['#3398DB', '#fa0404', '#dddddd'],
      series: [
        {
          name: '不合格项目统计',
          type: 'pie',
          radius: '55%',
          center: [
            '50%', '60%'
          ],
          data: [
            {
              value: <%= @good %>,
              name: '合格'
            }, {
              value: <%= @bad %>,
              name: '不合格'
            }, {
              value: <%= @checkout_no %>,
              name: '未检出'
            }
          ],
          itemStyle: {
            emphasis: {
              shadowBlur: 10,
              shadowOffsetX: 0,
              shadowColor: 'rgba(0, 0, 0, 0.5)'
            }
          }
        }
      ]
    };
    myChart.setOption(option);
  </script>
</div>
