    <th>&nbsp;</th>
    <th>检验机构名称</th>
    <th>&nbsp;</th>
  </tr>

<% @hzp_bsbs.each do |hzp_bsb| %>
  <tr>
    <td><%= hzp_bsb.hzp_d_90 %></td>
    <td>&nbsp;</td>
    <td><%= hzp_bsb.hzp_d_34 %></td>
    <td>&nbsp;</td>
    <td><%= hzp_bsb.hzp_s_3 %></td>
    <td>&nbsp;</td>
    <td width="80px"><%= hzp_bsb.hzp_s_14 %></td>
    <td>&nbsp;</td>
    <td width="80px"><%= hzp_bsb.hzp_s_13 %></td>
    <td>&nbsp;</td>
    <td width="100px"><%= hzp_bsb.hzp_s_31 %></td>
    <td>&nbsp;</td>
    <td width="100px"><%= hzp_bsb.hzp_s_39 %></td>
    <td>&nbsp;</td>
    <%if (hzp_bsb["hzp_i_state"]==nil) %>
        <td><%= link_to '修改', edit_hzp_bsb_path(hzp_bsb) %></td>
        <td><%= link_to '删除', hzp_bsb, method: :delete, data: { confirm: '是否删除?' } %></td>
    <%elsif (hzp_bsb["hzp_i_state"]<2) %>
        <td><%= link_to '修改', edit_hzp_bsb_path(hzp_bsb) %></td>
        <td><%= link_to '删除', hzp_bsb, method: :delete, data: { confirm: '是否删除?' } %></td>
    <%elsif hzp_bsb["hzp_i_state"]<4 %>
        <td><%= link_to '填报检测数据', edit_hzp_bsb_path(hzp_bsb) %></td>
        <td><%= link_to '删除', hzp_bsb, method: :delete, data: { confirm: '是否删除?' } %></td>
    <%elsif hzp_bsb["hzp_i_state"]==4%>
        <td><%= link_to '查看', hzp_bsb %></td>
        <%if current_user.is_admin?%>
            <td><%= link_to '退修', :controller => "hzp_bsbs",:action => "submit", :id =>hzp_bsb %></td>
        <%end%>
    <%elsif hzp_bsb["hzp_i_state"]==10 %>
        <td><%= link_to '修改(导入待入库)', edit_hzp_bsb_path(hzp_bsb) %></td>
        <td><%= link_to '删除', hzp_bsb,method: :delete, data: { confirm: '是否删除?' } %></td>
    <%end%>
  </tr>
<% end %>
</table>
<p><%=will_paginate @hzp_bsbs ,:separator=>',',:previous_label=>'上一页',:next_label=>'下一页'%></p>
