                        <% else %><%= product.spdata_11 %>～
                        <%= product.spdata_15 %>
                    <% end %>
                  </td>
                  <% if product.spdata_1 == '未检出' %>
                      <td style="<%= auto_adjust_text_size(product.spdata_1+product.spdata_7+product.spdata_8, 5) %>">
